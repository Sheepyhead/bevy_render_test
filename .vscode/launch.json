  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'bevy_render_test'",
      "cargo": {
        "args": [
          "build",
          "--bin=bevy_render_test",
          "--package=bevy_render_test"
        ],
        "filter": {
          "name": "bevy_render_test",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "full"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'bevy_render_test'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=bevy_render_test",
          "--package=bevy_render_test"
        ],
        "filter": {
          "name": "bevy_render_test",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "full"
      }
    }
  ]
}